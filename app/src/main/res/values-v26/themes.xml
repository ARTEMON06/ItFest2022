<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/accent_day</item>
        <!-- Customize your theme here. -->

        <item name="item">@color/white</item>
        <item name="accent">@color/accent_day</item>
        <item name="text_item">@color/black</item>
        <item name="back_article">@color/white</item>
        <item name="right_color">@color/accent_day</item>
        <item name="text_article">@color/black</item>
        <item name="highlight">@color/highlight_day</item>
        <item name="android:autofilledHighlight">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:colorControlActivated">@color/accent_day</item>
        <item name="android:windowBackground">@color/background_day</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="back_pressed_button">@color/pressed_button_day</item>
    </style>

    <style name="Theme.MyApplicationDark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/accent_night</item>
        <!-- Customize your theme here. -->

        <item name="item">@color/gray</item>
        <item name="accent">@color/accent_night</item>
        <item name="text_item">@color/white</item>
        <item name="back_article">@color/black</item>
        <item name="right_color">@color/white</item>
        <item name="text_article">@color/white</item>
        <item name="highlight">@color/highlight_night</item>
        <item name="android:autofilledHighlight">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:colorControlActivated">@color/accent_night</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="back_pressed_button">@color/pressed_button_night</item>

    </style>

    <style name="Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyApplication.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>